# LDAP schema for VIAA
# Custom attributeTypes

attributetype ( 1.3.6.1.4.1.50458.2.2017.07.29.1
        NAME 'x-be-viaa-ExternalId'
        DESC 'External unique identifier, e.g. unique ID in CRM.'
        EQUALITY caseIgnoreIA5Match
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.26 
        SINGLE-VALUE)

attributetype ( 1.3.6.1.4.1.50458.2.2017.07.29.2
        NAME 'x-be-viaa-Sector'
        DESC 'Sector in which the entry is active, e.g. broadcast, government, ...'
        SUBSTR caseIgnoreSubstringsMatch
        EQUALITY caseIgnoreMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.15 
        SINGLE-VALUE)

attributetype ( 1.3.6.1.4.1.50458.2.2017.07.29.3
        NAME 'x-be-viaa-eduCourseName'
        DESC 'One or more courses the person teaches, e.g. history, geography, Dutch.'
        SUBSTR caseIgnoreSubstringsMatch
        EQUALITY caseIgnoreMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.15)

attributetype ( 1.3.6.1.4.1.50458.2.2017.07.29.4
        NAME 'x-be-viaa-eduTypeName'
        DESC 'Official full name of the type of education a person works or studies in, e.g.  Algemeen Secundair Onderwijs, Universitair Onderwijs.'
        SUBSTR caseIgnoreSubstringsMatch
        EQUALITY caseIgnoreMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.15)

attributetype ( 1.3.6.1.4.1.50458.2.2017.07.29.5
        NAME 'x-be-viaa-eduTypeCode'
        DESC 'Official 3 character (numeric) code for the type of education as specified by the governmental department of education, e.g. 111, 211, 311, CLB.'
        EQUALITY caseIgnoreIA5Match
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.26)

attributetype ( 1.3.6.1.4.1.50458.2.2017.07.29.6
        NAME 'x-be-viaa-eduLevelName'
        DESC 'Educational level or grade, such as eerste graad, tweede graad, derde graad.'
        SUBSTR caseIgnoreSubstringsMatch
        EQUALITY caseIgnoreMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.15)

attributeType (  1.3.6.1.4.1.50458.2.2017.07.29.7
        NAME 'x-viaa-be-accountExpiry'
        DESC 'Timestamp starting from which account expires.'
        EQUALITY generalizedTimeMatch
        ORDERING generalizedTimeOrderingMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.24 
        SINGLE-VALUE )

attributeType (  1.3.6.1.4.1.50458.2.2017.07.29.8
        NAME ' x-viaa-be-eduAvoExpiry'
        DESC 'Timestamp indicating when application access may be revoked.'
        EQUALITY generalizedTimeMatch
        ORDERING generalizedTimeOrderingMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.24 
        SINGLE-VALUE )
        
attributetype ( 1.3.6.1.4.1.50458.2.2017.07.29.9
        NAME 'x-be-viaa-eduAvo1Userid'
        DESC 'Drupal userid as used in AVO1. Legacy reference.'
        EQUALITY integerMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.27 
        SINGLE-VALUE)

# VIAA custom objectClasses

objectclass ( 1.3.6.1.4.1.50458.1.2017.07.29.1
        NAME 'x-be-viaa-Person'
        AUXILIARY
        MAY ( x-be-viaa-ExternalId $ x-viaa-be-accountExpiry ) )

objectclass ( 1.3.6.1.4.1.50458.1.2017.07.29.2
        NAME 'x-be-viaa-educationalPerson'
        DESC 'Person who is active in education, e.g. Teacher, Student, Professor.'
        AUXILIARY
        MAY ( x-be-viaa-eduCourseName $ x-be-viaa-eduTypeName $ x-be-viaa-eduTypeCode $ x-be-viaa-eduLevelName $ x-viaa-be-eduAvoExpiry $ x-be-viaa-eduAvo1Uid $ organizationalStatus ) )

objectclass ( 1.3.6.1.4.1.50458.1.2017.07.29.3
        NAME 'x-be-viaa-Organization'
        AUXILIARY
        MAY ( x-be-viaa-ExternalId $ x-be-viaa-Sector ) )

objectclass ( 1.3.6.1.4.1.50458.1.2017.07.29.4
        NAME 'x-be-viaa-educationalOrganization'
        DESC 'Organisation active in the wider field of the educational sector, such as a school, university, but also an educational publisher.'
        AUXILIARY
        MAY ( x-be-viaa-eduTypeName $ x-be-viaa-eduTypeCode ) )
